{
  "formName": "PatientRecord",
  "layout": "3",
  "fields": [
    {
      "key": "patientId",
      "label": "Patient ID",
      "type": "text",
      "required": true,
      "validators": ["required", "pattern:^\\d{6}$"]
    },
    {
      "key": "patientName",
      "label": "Patient Name",
      "type": "text",
      "required": true,
      "validators": ["required", "minLength:2"]
    },
    {
      "key": "bedNumber",
      "label": "Bed Number",
      "type": "text",
      "required": true,
      "validators": ["required", "pattern:^\\d{1,4}$"]
    },
    {
      "key": "disease",
      "label": "Disease",
      "type": "text",
      "required": true,
      "validators": ["required", "minLength:3"]
    },
    {
      "key": "admissionDate",
      "label": "Admission Date",
      "type": "date",
      "required": true,
      "validators": ["required"]
    },
    {
      "key": "dischargeDate",
      "label": "Discharge Date",
      "type": "date",
      "required": false,
      "validators": []
    },
    {
      "key": "billingDetails",
      "label": "Billing Details",
      "type": "group",
      "fields": [
        {
          "key": "billingAmount",
          "label": "Billing Amount",
          "type": "text",
          "required": true,
          "validators": ["required", "pattern:^\\d+(\\.\\d{1,2})?$"]
        },
        {
          "key": "insuranceProvider",
          "label": "Insurance Provider",
          "type": "text",
          "required": true,
          "validators": ["required"]
        },
        {
          "key": "insuranceNumber",
          "label": "Insurance Number",
          "type": "text",
          "required": true,
          "validators": ["required", "minLength:5"]
        }
      ]
    },
    {
      "key": "emergencyContact",
      "label": "Emergency Contact",
      "type": "text",
      "required": true,
      "validators": ["required", "pattern:^\\+?[1-9]\\d{1,14}$"]
    },
    {
      "key": "gender",
      "label": "Gender",
      "type": "radio",
      "options": [
        {"key": "male", "label": "Male"},
        {"key": "female", "label": "Female"},
        {"key": "other", "label": "Other"}
      ],
      "required": true,
      "validators": ["required"]
    },
    {
      "key": "age",
      "label": "Age",
      "type": "text",
      "required": true,
      "validators": ["required", "pattern:^\\d{1,3}$"]
    },
    {
      "key": "bloodType",
      "label": "Blood Type",
      "type": "dropdown",
      "options": [
        {"key": "A+", "label": "A+"},
        {"key": "A-", "label": "A-"},
        {"key": "B+", "label": "B+"},
        {"key": "B-", "label": "B-"},
        {"key": "AB+", "label": "AB+"},
        {"key": "AB-", "label": "AB-"},
        {"key": "O+", "label": "O+"},
        {"key": "O-", "label": "O-"}
      ],
      "required": true,
      "validators": ["required"]
    },
    {
      "key": "maritalStatus",
      "label": "Marital Status",
      "type": "dropdown",
      "options": [
        {"key": "single", "label": "Single"},
        {"key": "married", "label": "Married"},
        {"key": "widowed", "label": "Widowed"},
        {"key": "divorced", "label": "Divorced"}
      ],
      "required": true,
      "validators": ["required"]
    },
    {
      "key": "doctorAssigned",
      "label": "Doctor Assigned",
      "type": "text",
      "required": true,
      "validators": ["required"]
    },
    {
      "key": "allergies",
      "label": "Allergies",
      "type": "text",
      "required": false,
      "validators": []
    },
    {
      "key": "medication",
      "label": "Medication",
      "type": "textarea",
      "required": false,
      "validators": []
    },
    {
      "key": "notes",
      "label": "Additional Notes",
      "type": "textarea",
      "required": false,
      "validators": []
    }
  ]
}
